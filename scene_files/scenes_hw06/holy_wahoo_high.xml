			<translate>0 -4 -2 </translate>
			<scale>0.5 0.5 0.5</scale>
			<rotate>0 0 0</rotate>
		</transform>
		<material>emissive_material</material>
	</geometry>

	<geometry type="obj" name="wahoo1">
