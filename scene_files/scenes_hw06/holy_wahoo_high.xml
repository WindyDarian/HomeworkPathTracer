	</geometry>

	<geometry type="square" name="Floor">
		<transform>
			<translate>0 -5 0</translate>
			<rotate>-90 0 0</rotate>
			<scale>20 10 1</scale>
		</transform>
		<material>green_diffuse</material>
	</geometry>

	<geometry type="obj" name="wahoo">
